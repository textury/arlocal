{
  "name": "arlocal",
  "version": "1.1.16",
  "main": "./bin/app.js",
  "repository": "https://github.com/textury/arlocal.git",
  "author": "Cedrik <cedrik.git@tryninja.io>",
  "license": "MIT",
  "files": [
    "bin/**/*"
  ],
  "bin": {
    "arlocal": "./bin/index.js"
  },
  "engines": {
    "node": ">=15.14.0"
  },
  "scripts": {
    "start": "node ./bin",
    "build": "rimraf bin && tsc && copyfiles -u 1 \"./src/**/*.graphql\" bin",
    "dev": "tsc-watch --onSuccess \"node bin\"",
    "cmd": "yarn build && yarn start",
    "test": "jest --detectOpenHandles --silent",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "precommit": "npm run format && npm run lint && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "apollo-server-koa": "^2.25.1",
    "arbundles": "^0.2.6",
    "arweave-bundles": "^1.0.3",
    "bignumber.js": "^9.0.1",
    "graphql": "^15.5.0",
    "knex": "^0.95.6",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.0.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "moment": "^2.29.1",
    "rfc4648": "^1.5.0",
    "smartweave": "^0.4.45",
    "sqlite3": "^5.0.2",
    "tsc-watch": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.3",
    "@types/koa-bodyparser": "^4.3.1",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.2",
    "@types/lodash": "^4.14.170",
    "@types/minimist": "^1.2.1",
    "@types/nedb": "^1.8.11",
    "@types/node": "^15.12.2",
    "@types/supertest": "^2.0.11",
    "ardb": "^1.1.7",
    "arkb": "^1.1.31",
    "arweave": "^1.10.14",
    "blockweave": "^1.0.15",
    "copyfiles": "^2.4.1",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "redstone-smartweave": "^0.3.10-alpha.9",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  }
}
